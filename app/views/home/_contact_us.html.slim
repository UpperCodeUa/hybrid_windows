section.contact_us_section#form-anchor
    = form_with model: @request, url: contacts_path, method: :post, local: true,
            data: { turbo: false }, class: 'contact_us-box' do |f|
        .top-form-box
            .h2-no-line Звʼяжіться з нами
            .subtitle Залиште номер телефону і наш менеджер зв'яжеться з вами.
        .center-form-box
            .inner-box
                .input-box
                    = f.label :name, "Ваше імʼя"
                    = f.text_field :name, placeholder: "Ім'я", required: true
                .input-box
                    = f.label :phone, "Ваш номер телефону"
                    = f.telephone_field :phone,
                            placeholder: "Номер телефону",
                            pattern: '\+?[0-9]{10,13}',
                            inputmode: "numeric",
                            required: true
            .input-box
                = f.label :message, "Повідомлення"
                = f.text_area :message,
                        placeholder: "Ваше повідомлення",
                        maxlength: 500
        / .bottom-form-box
            .h-captcha data-sitekey="56361746-cce6-4f12-87a6-2866114c3522"
        .bottom-form-box
            = f.submit "Замовити дзвінок", class: "button-red"

