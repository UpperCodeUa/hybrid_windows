    div#about-section
    .container
        .h2 Філософія Hybrid Windows
    .container
        .philosophy-section-wrapper
            .video-box
                .swiper.iframes-slider
                    .swiper-wrapper
                        .swiper-slide
                            <iframe width="100%" height="100%" src="https://www.youtube.com/embed/W01ZXHii260" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        .swiper-slide
                            <iframe width="100%" height="100%" src="https://www.youtube.com/embed/MzwyL_x_s-s" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
